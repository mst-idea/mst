{
  "files.encoding": "utf8",
  "files.eol": "\n",
  "editor.tabSize": 2,
  "editor.rulers": [80],

  // Format on save (require recommended extensions).
  "editor.formatOnSave": true,
  "editor.codeActionsOnSave": { "source.organizeImports": "always" },
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // File nesting patterns (enable as you need).
  "explorer.fileNesting.patterns": {
    "package.json": "pnpm-lock.yaml",
    "readme.md": "license"
  },

  // Code spell checker (require recommended extensions).
  "cSpell.ignorePaths": [
    ".git",
    ".data",
    ".nuxt",
    "node_modules",
    "pnpm-lock.yaml",
    "LICENSE"
  ],
  "cSpell.words": [
    "aprosail",
    "esbenp",
    "esbuild",
    "friedenthal",
    "frontmatter",
    "hsue",
    "jiao",
    "murtaugh",
    "nuxt",
    "oxlint",
    "shen",
    "tsien"
  ]
}
